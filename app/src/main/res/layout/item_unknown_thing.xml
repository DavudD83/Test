<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_unknown_thing_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="16dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_unknown_thing_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_margin="16dp"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            tools:text="Temperature sensor"
            />

        <TextView
            android:id="@+id/tv_unknown_thing_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/unknown_string_text"
            android:layout_margin="16dp"

            app:layout_constraintTop_toBottomOf="@id/tv_unknown_thing_label"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            />

    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>
